class Solution(object):
    def countAlternatingSubarrays(self, nums):
        count = 1
        total = 0 
        for i in range(1,len(nums)):
            if nums[i] != nums[i-1]:
                count +=1 
            else:
                count = 1
            
            total += count
        return total + 1
        """
        :type nums: List[int]
        :rtype: int
        """
        